<%= form_for @place, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group <%= 'has-error' if @place.errors[:title].any? %>">
    <div class="col-sm-offset-3 col-sm-6">
    	<%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
    	<%= f.label :category %>
     	<%= f.select :category_id, @categories.collect { |category| [category.title, category.id] }, include_blank: true %>

      <%= link_to 'New category', new_category_path %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
    	<%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
    	<%= f.label :main_photo %>
      <%= f.file_field :main_photo %>
    </div>
    <div class="col-sm-offset-3 col-sm-6">
      <%= f.label :agree %>
      <%= f.check_box :agree, {}, true, nil %>
    </div>
    <%= f.hidden_field :status, value: false %>

  </div>
  <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
          <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
      </div>
  </div>
<% end %>
